<p id="notice"><%= notice %></p>

<div class="col-md-6">
	<p>
		<strong>Token:</strong>
		<%= @user.token %>
	</p>

	<p>
		<strong>Email:</strong>
		<%= @user.email %>
	</p>

	<p>
		<strong>Phone:</strong>
		<%= @user.phone %>
	</p>

	<p>
		<strong>Timezone:</strong>
		<%= @user.timezone %>
	</p>

	<p>
		<strong>Ip address:</strong>
		<%= @user.ip_address %>
	</p>

	<p>
		<strong>Project:</strong>
		<%= @user.project.title %>
	</p>
</div>

<div class="col-md-6">
	<h2>Articles</h2>
	<ul>
	<% for article in @user.articles %>
		<li><%= article.title %></li>
	<% end %>
	</ul>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
