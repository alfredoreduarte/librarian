<p id="notice"><%= notice %></p>

<div class="col-md-6">
	<h2><%= @user.name %> <%= @user.last_name %></h2>
	<h2>Created at <%= @user.created_at.to_formatted_s(:long) %></h2>
	<p>
		<strong>Token:</strong>
		<%= @user.token %>
	</p>

	<p>
		<strong>Status:</strong>
		<%= @user.status %>
	</p>

	<p>
		<strong>Email:</strong>
		<%= @user.email %>
	</p>

	<p>
		<strong>Phone:</strong>
		<%= @user.phone %>
	</p>

	<p>
		<strong>Timezone:</strong>
		<%= @user.timezone %>
	</p>

	<p>
		<strong>Ip address:</strong>
		<%= @user.ip_address %>
	</p>

	<p>
		<strong>Project:</strong>
		<%= @user.project.title %>
	</p>

	<%= link_to 'Edit', edit_user_path(@user) %> | 
	<%= link_to 'Back', users_path %> | 
	<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>

<div class="col-md-6">
	<h2>Articles</h2>
	<ul class="list-unstyled">
	<% for article in @user.articles %>
		<li><%= @user.readings.where(article_id: article.id).first.sent ? 'SENT' : 'PENDING' %> | <%= link_to article.title, article %></li>
	<% end %>
	</ul>
</div>